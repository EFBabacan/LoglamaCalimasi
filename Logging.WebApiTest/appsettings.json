{
  "Serilog": {
    // YENİ BÖLÜM BURASI
    "LevelSwitches": { "$controlSwitch": "Information" },

    // MinimumLevel bölümünü artık buradan yöneteceğiz,
    // o yüzden onu kaldırıp yerine "ControlledBy" kullanacağız.
    // ESKİ: "MinimumLevel": { "Default": "Information" },
    "MinimumLevel": {
      "ControlledBy": "$controlSwitch"
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {CorrelationId} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ]
  }
}